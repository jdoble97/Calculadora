<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:text="8"
                android:textSize="70sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="M"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btMsu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="M +"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btMmen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="M -"
                android:textSize="28sp"
                tools:text="M -" />

            <Button
                android:id="@+id/btMr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MR"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btAc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AC"
                android:textSize="28sp"
                tools:text="C" />

            <Button
                android:id="@+id/btConv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+ / -"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btPor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btMult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btSum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btRes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:text="0"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btPunto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="28sp" />

            <Button
                android:id="@+id/btIgual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="28sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>